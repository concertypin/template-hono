{
	"name": "template-hono",
	"private": true,
	"license": "Apache-2.0",
	"engines": {
		"node": ">=22"
	},
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"prebuild": "pnpm run cf-typegen",
		"preview": "pnpm run build && vite preview",
		"deploy": "pnpm run build && wrangler deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"postinstall": "pnpm run cf-typegen && pnpm exec simple-git-hooks",
		"format": "biome format --write .",
		"lint": "biome check ."
	},
	"dependencies": {
		"@hono/zod-openapi": "^1.1.0",
		"@scalar/hono-api-reference": "^0.9.18",
		"hono": "^4.9.7",
